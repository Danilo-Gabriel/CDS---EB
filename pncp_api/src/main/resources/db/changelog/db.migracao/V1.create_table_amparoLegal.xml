<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:pro="http://www.liquibase.org/xml/ns/pro"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">



    <changeSet id="V1.create_table_amparoLegal" author="daniloGabriel">
        <createTable tableName="amparo_legal">

            <column name="id" type="smallserial" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="nome" type="varchar(255)"/>
            <column name="descricao" type="text"/>
            <column name="data_inclusao" type="varchar(255)"/>
            <column name="data_atualizacao" type="varchar(255)"/>
            <column name="status" type="boolean"/>
   
        </createTable>
    </changeSet>


</databaseChangeLog>
